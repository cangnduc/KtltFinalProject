@page
@model _21810203.Pages.AddProductModel

<form method="POST">
	<div class="form-row">
		<div class="form-group col-md-4">
			<label>ID</label>
			<input name="id" type="text" class="form-control" value="" placeholder="">
		</div>
		<div class="form-group col-md-4">
			<label>Name</label>
			<input name="name" type="text" class="form-control" placeholder="">
		</div>
		<div class="form-group col-md-4">
			<label>Price</label>
			<input name="price" type="text" class="form-control" placeholder="">
		</div>
		<div class="form-group col-md-4">
			<label>Expiration</label>
			<input name="Expiration" type="date" class="form-control" placeholder="">
		</div>
		<div class="form-group col-md-4">
			<label>Category</label>
			<select class="form-control" name = "Catname">

				@foreach (var items in Model.CuaHang)
				{
					<option value="@items.name">@items.name</option>

				}
			</select>
		</div>
	</div>

	<button type="submit" class="btn btn-primary mt-2">Save</button>
</form>
